@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "RoleList";
}

<h1>Role List</h1>

<p>
    <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="CreateRole">Create Role</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Role Name
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a href="/admin/editrole/@item.Id" class="btn btn-primary">Edit</a>
                        <form action="/admin/deleterole" method="post" style="display: inline;">
                            <input type="hidden" name="RoleId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">Delete Role</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
        <tr>
            <td>
                <h1>No Role</h1>
            </td>
        </tr>
        }
    </tbody>
</table>

